<h1>Polls</h1>
<% @polls.each do |poll| %>
    <div class="well">
        <h3><%= poll.question %></h3>
        <ul>
        <%= poll.options.split(",").each do |option| %>
            <li><%= option %></li>
        <% end %>
        </ul>
        <%= link_to "Details", poll_path(poll), :class => "btn btn-primary" %>
    </div>
<% end %> 